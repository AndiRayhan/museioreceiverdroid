<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="15sp"
        android:text="Theta Beta Ratio"
        android:id="@+id/myid" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:text="Your average ratio for each of the 4 channels"
        android:id="@+id/result"
        android:layout_gravity="center_horizontal"
        android:clickable="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="102dp"
        android:text="Start"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickStartButton"
        android:clickable="true" />

    <LinearLayout
	    android:id="@+id/alpha_vals_layout"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/ratioch1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/ratioch2"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/ratioch3"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="@string/init_val" />
        <TextView
            android:id="@+id/ratioch4"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="@string/init_val" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/THETA_ALPHA_BOX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.74">

        <TextView
            android:id="@+id/TACH1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/TACH2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/TACH3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/TACH4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/init_val" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/AndiRayhan/StudioProjects/museioreceiverdroid/app/src/main/res/layout/main.xml -->